<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF5E5"
    tools:context=".MainActivity">
    
    <TextView
        android:id="@+id/statistic_table"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:text="0 / 0"
        android:background="@drawable/backround_table_statistic"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>




    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_soraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginTop="60dp"
        android:text=""
        android:textSize="24sp"
        android:textColor="@color/black"
        app:fontFamily="@font/abeezee"
        app:layout_constraintBottom_toTopOf="@+id/tv_answer1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statistic_table" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_answer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="15dp"
        android:text="1"
        android:textSize="24sp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_answer2"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_answer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="15dp"
        android:text="1"
        android:textSize="24sp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_answer1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_answer3"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_answer3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="15dp"
        android:text="1"
        android:textSize="24sp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_answer2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_answer4"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/tv_answer4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="#D9D9D9"
        app:cornerRadius="15dp"
        android:text="1"
        android:textSize="24sp"
        android:fontFamily="@font/abeezee"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_answer3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_next"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:backgroundTint="#7CD061"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>